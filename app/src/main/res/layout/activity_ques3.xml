<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.mcq_quiz.ques3"
    android:background="@drawable/background2">
    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Q.3. Chlorophyll is a naturally occuring chelate compound in which central metal is"
        android:textSize="20dp"
        android:padding="40dp"
        android:textColor="#240cdc"
        android:id="@+id/ques1"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="447dp"
        tools:layout_editor_absoluteX="288dp"
        android:text="NEXT"
        android:id="@+id/nextbtn2"
        android:layout_alignBottom="@+id/prevbtn2"
        android:layout_alignRight="@+id/ques1"
        android:layout_alignEnd="@+id/ques1"
        android:layout_alignTop="@+id/prevbtn2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIOUS"
        android:id="@+id/prevbtn2"
        tools:layout_editor_absoluteY="447dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ques1"
        android:layout_marginLeft="30dp">

        <RadioButton
            android:id="@+id/choice1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="copper" />

        <RadioButton
            android:id="@+id/choice2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="magnesium" />

        <RadioButton
            android:id="@+id/choice3"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="iron" />

        <RadioButton
            android:id="@+id/choice4"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="calcium" />
    </RadioGroup>


</RelativeLayout>




